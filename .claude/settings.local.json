{
  "permissions": {
    "allow": [
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(tuist generate:*)",
      "Bash(xcodebuild:*)",
      "Bash(tuist test:*)",
      "WebFetch(domain:rickandmortyapi.com)",
      "Bash(tuist clean:*)",
      "Bash(swiftlint version:*)",
      "Bash(swiftlint lint:*)",
      "Bash(swiftlint rules:*)",
      "WebSearch",
      "WebFetch(domain:www.hackingwithswift.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(chmod:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "WebFetch(domain:docs.tuist.io)",
      "WebFetch(domain:docs.tuist.dev)",
      "Bash(xargs:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(curl:*)",
      "Bash(tuist install:*)",
      "Bash(tuist build:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:forums.swift.org)",
      "Bash(xcrun simctl:*)",
      "Bash(git stash:*)",
      "Bash(git checkout:*)",
      "Bash(python3:*)",
      "Bash(brew install:*)",
      "Bash(convert:*)",
      "Bash(magick:*)",
      "Bash(pip3 install:*)",
      "Bash(tuist version:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(claude --version)",
      "Skill(tuist)",
      "Skill(dependency-injection)",
      "Bash(mise ls-remote:*)",
      "Bash(mise install:*)",
      "Bash(periphery version:*)",
      "Bash(mise x:*)",
      "Bash(mise exec:*)",
      "Bash(tuist:*)",
      "WebFetch(domain:www.youtube.com)",
      "WebFetch(domain:wmedia.es)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:code.claude.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$TOOL_INPUT\" == *.swift ]]; then mise x -- swiftlint lint --quiet --path \"$TOOL_INPUT\" 2>/dev/null || true; fi"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "test-runner",
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ Test runner completed'"
          }
        ]
      },
      {
        "matcher": "code-reviewer",
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ Code review completed'"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "tuist"
  ]
}
